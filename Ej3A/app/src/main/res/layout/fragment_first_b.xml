<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstBFragment">

    <TextView
        android:id="@+id/textview_first_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragmento 1.2"
        app:layout_constraintBottom_toTopOf="@id/button_firstB_firstA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_firstB_firstA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ir 1.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_first_b" />
</androidx.constraintlayout.widget.ConstraintLayout>