<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"
        android:text="@string/introduce_dos_n_meros"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/purple_200"
    />

    <EditText
        android:id="@+id/editTex01"

        android:layout_width="50sp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/titulo"
        android:layout_alignStart="@+id/titulo"
        android:layout_marginTop="20sp"
    />

    <EditText
        android:id="@+id/editTex02"

        android:layout_width="50sp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/titulo"
        android:layout_alignEnd="@+id/titulo"
        android:layout_marginTop="20sp"
        />

    <Button
        android:id="@+id/button01"

        android:layout_width="200sp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/editTex01"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:text="@string/to_activity_2"
        android:textAllCaps="false"
        android:backgroundTint="@color/purple_200"
    />

    <TextView
        android:id="@+id/textViewResultado"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/button01"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:text=""
    />

</RelativeLayout>