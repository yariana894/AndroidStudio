<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="84dp"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"

        android:contentDescription="@string/avatar"
        tools:srcCompat="@mipmap/ic_launcher_round"

        />

    <TextView
        android:id="@+id/textView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:text="@string/my_library" />

    <Button
        android:id="@+id/button01"
        android:layout_width="200sp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/textView01"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:text="@string/list_all_books1"
        android:textAllCaps="false" />



    <Button
        android:id="@+id/button02"
        android:layout_width="200sp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/button01"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:text="@string/reading"
        android:textAllCaps="false"
    />

    <Button
        android:id="@+id/button03"
        android:layout_width="200sp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/button02"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:text="@string/already_read"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/button04"
        android:layout_width="200sp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/button03"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:text="@string/wishlist"
        android:textAllCaps="false"
    />

    <Button
        android:id="@+id/button05"
        android:layout_width="200sp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/button04"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:text="@string/favourite_books"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/button06"
        android:layout_width="200sp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/button05"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:text="@string/about"
        android:textAllCaps="false"
        />

    <TextView
        android:id="@+id/textView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/developed_by_samuel_alonso"
        android:layout_below="@+id/button06"
        android:layout_toEndOf="@+id/button06"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"
        android:textStyle="italic"
        />



</RelativeLayout>